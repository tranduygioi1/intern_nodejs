<div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
  <h2 class="mb-0 flex-shrink-0">Lời Mời Kết Bạn</h2>

  <form action="/friends" method="GET" class="d-flex flex-grow-0" style="min-width: 400px;">
    <div class="input-group">
      <input type="text" name="q" class="form-control" placeholder="Tìm theo tên, username, email..." value="{{q}}">
      <button class="btn btn-primary" type="submit">
        <i class="bx bx-search"></i> Tìm kiếm
      </button>
    </div>
  </form>
</div>

{{!-- Nếu có lời mời --}}
{{#if friendRequests.length}}
  <div class="row">
    {{#each friendRequests}}
      <div class="col-md-3 col-sm-6 mb-4">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body text-center d-flex flex-column align-items-center justify-content-center">

            <div class="d-flex align-items-center justify-content-center rounded-circle bg-dark mb-3" style="width: 100px; height: 100px; overflow: hidden;">
              {{#if this.avatar}}
                <img src="{{this.avatar}}" alt="{{this.username}}" class="w-100 h-100" style="object-fit: cover;">
              {{else}}
                <i class="bx bx-user text-secondary fs-1"></i>
              {{/if}}
            </div>

            <h5 class="mb-1 text-truncate" style="max-width: 150px;">{{this.name}}</h5>
            <p class="text-muted mb-2 text-truncate" style="max-width: 150px;">@{{this.username}}</p>

            <div class="d-flex gap-2">
              <button class="btn btn-success btn-sm accept-btn" data-userid="{{this._id}}">
                <i class="bx bx-check"></i> Chấp nhận
              </button>
              <button class="btn btn-outline-danger btn-sm reject-btn" data-userid="{{this._id}}">
                <i class="bx bx-x"></i> Từ chối
              </button>
            </div>

          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <div class="alert alert-info text-center mt-4">
    <i class="bx bx-info-circle"></i> Bạn chưa có lời mời kết bạn nào.
  </div>
{{/if}}

<hr class="my-5">

<div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
  <h2 class="mb-0 flex-shrink-0">Những Người Bạn Có Thể Biết</h2>
</div>

{{!-- Nếu có users --}}
{{#if users.length}}
  <div class="row">
    {{#each users}}
      <div class="col-md-3 col-sm-6 mb-4">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body text-center d-flex flex-column align-items-center justify-content-center">

            {{!-- Ảnh đại diện --}}
            <div class="d-flex align-items-center justify-content-center rounded-circle bg-dark mb-3" style="width: 100px; height: 100px; overflow: hidden;">
              {{#if this.avatar}}
                <img src="{{this.avatar}}" alt="{{this.username}}" class="w-100 h-100" style="object-fit: cover;">
              {{else}}
                <i class="bx bx-user text-secondary fs-1"></i>
              {{/if}}
            </div>

            <h5 class="mb-1 text-truncate" style="max-width: 150px;">{{this.name}}</h5>
            <p class="text-muted mb-2 text-truncate" style="max-width: 150px;">@{{this.username}}</p>

            {{!-- Nút kết bạn hoặc hủy yêu cầu --}}
            <button 
              class="btn btn-sm friend-btn 
                {{#if (includes ../currentUser.sentRequests this._id)}}btn-outline-danger{{else}}btn-outline-success{{/if}}" 
              data-userid="{{this._id}}">

              {{#if (includes ../currentUser.sentRequests this._id)}}
                <i class="bx bx-user-x"></i> Hủy yêu cầu
              {{else}}
                <i class="bx bx-user-plus"></i> Kết bạn
              {{/if}}
            </button>

          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <div class="alert alert-info text-center mt-4">
    <i class="bx bx-info-circle"></i> Không tìm thấy người nào phù hợp.
  </div>
{{/if}}

<script>
  document.addEventListener('DOMContentLoaded', () => {

    // Nút kết bạn / hủy yêu cầu
    document.querySelectorAll('.friend-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const userId = btn.dataset.userid;
        const isSending = btn.classList.contains('btn-outline-success');
        const url = isSending ? `/friends/request/${userId}` : `/friends/cancel/${userId}`;

        const res = await fetch(url, { method: 'POST' });
        const data = await res.json();
        if (data.message) alert(data.message);

        // Cập nhật nút ngay sau khi ấn
        if (isSending) {
          btn.classList.remove('btn-outline-success');
          btn.classList.add('btn-outline-danger');
          btn.innerHTML = '<i class="bx bx-user-x"></i> Hủy yêu cầu';
        } else {
          btn.classList.remove('btn-outline-danger');
          btn.classList.add('btn-outline-success');
          btn.innerHTML = '<i class="bx bx-user-plus"></i> Kết bạn';
        }
      });
    });

    // Nút chấp nhận lời mời
    document.querySelectorAll('.accept-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const userId = btn.dataset.userid;
        const res = await fetch(`/friends/accept/${userId}`, { method: 'POST' });
        const data = await res.json();
        if (data.message) alert(data.message);
        btn.closest('.col-md-3').remove();
      });
    });

    // Nút từ chối lời mời
    document.querySelectorAll('.reject-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const userId = btn.dataset.userid;
        const res = await fetch(`/friends/reject/${userId}`, { method: 'POST' });
        const data = await res.json();
        if (data.message) alert(data.message);
        btn.closest('.col-md-3').remove();
      });
    });

  });
</script>
