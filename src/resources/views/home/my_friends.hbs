<div id="chat-popup" class="chat-popup d-none">
  <div class="chat-header">
    <span id="chat-name"></span>
    <button id="close-chat">‚úñ</button>
  </div>

  <div id="chat-body" class="chat-body"></div>

  <form id="chat-form" class="chat-footer">
    <input id="chat-input" type="text" placeholder="Nh·∫≠p tin nh·∫Øn..." autocomplete="off">
    <button type="submit">‚û§</button>
  </form>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  const nguoiGui = "{{nguoiGuiId}}";

  let nguoiNhan = null;
  let roomId = null;

  const popup = document.getElementById('chat-popup');
  const chatBody = document.getElementById('chat-body');
  const chatName = document.getElementById('chat-name');
  const chatInput = document.getElementById('chat-input');

  // RENDER 1 TIN NH·∫ÆN
  function renderMessage(msg) {

    console.log("üì© Tin nh·∫Øn nh·∫≠n ƒë∆∞·ª£c:", msg);
    console.log("‚û° So s√°nh:", {
      msgNguoiGui: msg.nguoiGuiId,
      nguoiGui,
      isMe: String(msg.nguoiGuiId) === String(nguoiGui)
    });

    const isMe = String(msg.nguoiGuiId) === String(nguoiGui);

    const div = document.createElement('div');
    div.classList.add('chat-msg', isMe ? 'me' : 'other');

    div.innerHTML = `<div class="bubble">${msg.noiDung}</div>`;
    chatBody.appendChild(div);
    chatBody.scrollTop = chatBody.scrollHeight;
  }

  // M·ªû CHAT
  document.querySelectorAll('.btn-chat').forEach(btn => {
    btn.addEventListener('click', () => {
      nguoiNhan = btn.dataset.id;
      chatName.innerText = btn.dataset.name;

      roomId = [nguoiGui, nguoiNhan].sort().join('_');
      popup.classList.remove('d-none');
      chatBody.innerHTML = '';

      socket.emit('load_history', { nguoiNhan });
      socket.emit('join_room', roomId);

    });
  });

  // ƒê√ìNG CHAT
  document.getElementById('close-chat').onclick = () => {
    popup.classList.add('d-none');
  };

  // G·ª¨I TIN
  document.getElementById('chat-form').addEventListener('submit', e => {
    e.preventDefault();
    if (!chatInput.value.trim()) return;

    socket.emit('gui_tin_nhan', {
      nguoiNhan,
      noiDung: chatInput.value,
      roomId
    });

    chatInput.value = '';
  });

  socket.on('chat_history', messages => {
    chatBody.innerHTML = '';

    messages.forEach(renderMessage);

    chatBody.scrollTop = chatBody.scrollHeight;
  })

  // NH·∫¨N TIN REALTIME
  socket.on('nhan_tin_nhan', data => {
    renderMessage(data);
  });

  /* =========================
      H·ª¶Y K·∫æT B·∫†N
  ========================== */
  document.querySelectorAll('.btn-unfriend').forEach(btn => {
    btn.addEventListener('click', async () => {
      const friendId = btn.dataset.id;

      if (!confirm('B·∫°n c√≥ ch·∫Øc mu·ªën h·ªßy k·∫øt b·∫°n kh√¥ng?')) return;

      try {
        const res = await fetch(`/friends/unfriend/${friendId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const data = await res.json();

        if (data.success) {
          const card = btn.closest('.col-md-3');
          card.style.transition = '0.3s';
          card.style.opacity = '0';

          setTimeout(() => card.remove(), 300);
        } else {
          alert(data.message || 'Kh√¥ng th·ªÉ h·ªßy k·∫øt b·∫°n');
        }
      } catch (err) {
        console.error(err);
        alert('C√≥ l·ªói x·∫£y ra');
      }
    });
  });

</script>


